@model AHM.Logistic.Smart.Common.Models.CustomerNotesModel

    <svg class="bi bi-chevron-down" data-toggle="collapse" href="#collapseUtilities" role="button" aria-expanded="false" aria-controls="collapseExample" xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16">
        <path fill-rule="evenodd" d="M1.646 4.646a.5.5 0 0 1 .708 0L8 10.293l5.646-5.647a.5.5 0 0 1 .708.708l-6 6a.5.5 0 0 1-.708 0l-6-6a.5.5 0 0 1 0-.708z" />
    </svg>
    <div class="collapse" id="collapseUtilities">
        <nav>
            <div class="nav nav-tabs" id="nav-tab" role="tablist">
                <a class="nav-link" id="nav-calls-tab" data-toggle="tab" href="#nav-home" role="tab" aria-controls="nav-home" aria-selected="true">Llamadas</a>
                <a class="nav-link active" id="nav-notes-tab" data-toggle="tab" href="#nav-profile" role="tab" aria-controls="nav-profile" aria-selected="false">Notas</a>
                <a class="nav-link" id="nav-meetings-tab" data-toggle="tab" href="#nav-contact" role="tab" aria-controls="nav-contact" aria-selected="false">Reuniones</a>
            </div>
        </nav>
        <div class="tab-content" id="nav-tabContent">
            <div class="tab-pane fade" id="nav-calls" role="tabpanel" aria-labelledby="nav-home-tab">Tab 1</div>
            <div class="tab-pane fade show active" id="nav-notes" role="tabpanel" aria-labelledby="nav-profile-tab">
                <div class="card-body">
                    <form class="form-row" method="post" id="frmCreateCustomer">
                        <div class="form-group col-md-6">
                            <label class="form-label">Descripcion</label>
                            <textarea maxlength="100" asp-for="cun_Descripcion" class="form-control" rows="3"></textarea>
                        </div>
                        <div class="form-group col-md-6" maxlength="14">
                            <label class="form-label">Fecha de expiracion</label>
                            <input type="date" asp-for="cun_ExpirationDate" class="form-control" />
                        </div>
                        <div class="form-group col-md-6">
                            <label class="form-label">Prioridad</label>
                            <select name="pry_Id" id="SelectPriority" class="form-control">
                                <option value="0"> Por favor seleccione una opción... </option>
                            </select>
                        </div>
                        <div class="form-group col-md-6">
                            <label class="form-label">Cargar archivo</label>
                            <button class="form-control" style="color: lightgrey; font-weight: bold" onclick="">Seleccionar archivo...</button>
                        </div>
                    </form>
                    <div>
                        <button type="submit" class="btn btn-primary" style="margin: 0px 30px 0px 0px;">Agregar</button>
                    </div>
                </div>
            </div>
            <div class="tab-pane fade" id="nav-meetings" role="tabpanel" aria-labelledby="nav-contact-tab">Tab 3</div>
        </div>
    </div>