@model AHM.Logistic.Smart.Common.Models.DepartmentsModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div style="padding-top:10%">

    <div class="conatiner-fluid content-inner mt-n5 py-0" style="padding-top:500px">
        <div>
            <div class="row">
                <div class="col-xl-12 col-lg-12">
                    <div class="card" style=" padding: 1%">
                        <div class="card-header d-flex justify-content-between">
                            <div class="header-title">
                                <h4 class="card-title">Departamento</h4>
                            </div>
                            <hr>
                        </div>
                        <div class="card-body">
                            <div class="new-user-info">
                              
                                <form method="post" autocomplete="off">
                                    <div class="row">
                                        <input type="hidden" asp-for="dep_IdUserCreate" value="1" />
                                        <div class="form-group col-md-6">
                                            <label class="form-label">Codigo</label>
                                            <div class="col-md-10">
                                                <input type="text" asp-for="dep_Code" class="form-control" />
                                            </div>
                                        </div>

                                        <div class="form-group col-md-6">
                                            <label class="form-label">Descripción</label>
                                            <div class="col-md-10">
                                                <input type="text" asp-for="dep_Description" class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                    <hr>
                                    <div style="margin: 4% 0% 0% 0%;">
                                        <button type="submit" class="btn btn-success" style="margin: 0px 30px 0px 0px;">Agregar</button>
                                        <a class="btn btn-outline-secondary" asp-area="" asp-controller="Depart" asp-action="Index">Regresar</a>
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>