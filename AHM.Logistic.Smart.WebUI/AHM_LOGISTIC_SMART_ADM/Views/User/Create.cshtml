@model AHM.Logistic.Smart.Common.Models.UsersModel
@{
    ViewData["Title"] = "Crear Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<html>
<head>
    <title>User Create</title>
</head>
<body>
    <div style="margin-top: -10%" class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-md-7">
                <div class="card">
                    <div style="background: #f16c69;" class="card-header">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-8">
                                    <h3 style="color: #FFF">Crear Usuario</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="new-user-info">
                            <form method="post" autocomplete="off">
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <label>Nombre de Usuario</label>
                                        <input type="text" asp-for="usu_UserName" class="form-control" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Contraseña</label>
                                        <input type="password" asp-for="usu_Password" class="form-control" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Rol del Usuario</label>
                                        <input type="number" asp-for="rol_Id" class="form-control" />
                                    </div>
                                    <div class="form-group col-md-6">
                                        <label>Empleado</label>
                                        <input type="number" asp-for="Per_Id" class="form-control" />
                                    </div>
                                    <input type="hidden" asp-for="usu_IdUserCreate" value="1" />
                                </div>
                                <hr>
                                <div style="margin: 4% 0% 0% 0%;">
                                    <button type="submit" class="btn btn-warning" style="margin: 0px 30px 0px 0px;">Agregar</button>
                                    <a class="btn btn-success" asp-area="" asp-controller="User" asp-action="Index">Regresar</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

