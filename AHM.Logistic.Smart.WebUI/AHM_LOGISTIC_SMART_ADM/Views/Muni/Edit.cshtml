@model AHM.Logistic.Smart.Common.Models.MunicipalitiesViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="conatiner-fluid content-inner mt-n5 py-0">
    <div>
        <div class="row">
            <div class="col-xl-12 col-lg-12">
                <div class="card" style="padding: 1%">
                    <div class="card-header d-flex justify-content-between">
                        <div class="header-title">
                            <h4 class="card-title">Municipio</h4>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="new-user-info">
                            <form asp-route="SaveMuni" method="post" autocomplete="off">
                                <div class="row">
                                    <div class="form-group col-md-3">
                                        <label class="form-label">Codigo</label>
                                        <div class="col-md-10">
                                            <input type="text" asp-for="mun_Code" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label asp-for="mun_Description" class="form-label">Descripción</label>
                                        <div class="col-md-10">
                                            <input type="text" asp-for="mun_Description" class="form-control" />
                                        </div>
                                    </div>
                                    <div class="form-group col-md-3">
                                        <label asp-for="dep_Id" class="form-label">Departamento</label>
                                        <div class="col-md-10">
                                            <input type="text" asp-for="dep_Id" class="form-control" />
                                        </div>
                                    </div>
                                    @*<div class="form-group col-md-3">*@
                                    @*<label asp-for="mun_IdUserCreate" class="form-label">Usuario Creador</label>*@
                                    <div hidden>
                                        <input asp-for="mun_IdUserModified" value="1" />
                                    </div>
                                    <div hidden>
                                        <input asp-for="mun_Id"/>
                                    </div>
                                    <div hidden>
                                        <input asp-for="mun_IdUserCreate" value="1" />
                                    </div>
                                    @*</div>*@
                                </div>
                                <hr>
                                <div style="margin: 4% 0% 0% 0%;">
                                    <button type="submit" class="btn btn-success">Editar</button>
                                    <a class="btn btn-outline-secondary" asp-area="" asp-controller="Muni" asp-action="Index">Regresar</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
