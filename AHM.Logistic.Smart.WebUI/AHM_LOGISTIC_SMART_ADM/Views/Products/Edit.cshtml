@model AHM.Logistic.Smart.Common.Models.ProductsViewModel
@{
    ViewData["Title"] = "Edit Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content-wrapper">
    <div class="row">
        <div class="col-md-12">
            <div class="card m-b-30">
                <div class="card-body">
                    <h4 class="card-title font-16 mt-0">Editar Productos</h4>
                    <h6 class="card-subtitle font-14 text-muted">Support card subtitle</h6>
                    <div class="card-body">
                        <form method="post" autocomplete="off" id="frmEditProducts">
                            <div class="row">
                                <input type="hidden" asp-for="pro_Id" />
                                <input type="hidden" asp-for="pro_IdUserCreate" value="1" />
                                <div class="form-group col-md-6">
                                    <label class="form-label">Descripción</label>
                                    <input type="text" asp-for="pro_Description" class="form-control" maxlength="50" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label">Precio de Compra</label>
                                    <input type="text" asp-for="pro_PurchasePrice" class="form-control" min="0" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label">Precio de Venta</label>
                                    <input type="text" asp-for="pro_SalesPrice" class="form-control" min="0" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label">Stock</label>
                                    <input type="number" asp-for="pro_Stock" class="form-control" min="0" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label">ISV</label>
                                    <input type="number" asp-for="pro_ISV" class="form-control" min="0" max="18" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label">Medida de peso</label>
                                    <select asp-for="uni_Id" class="form-control">
                                        <option value="0">Por favor seleccione una opción... </option>
                                        <option value="1">mg</option>
                                        <option value="2">g</option>
                                        <option value="3">kg</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label">Categoria</label>
                                    <select name="cat_Id" id="SelectCategories" class="form-control" maxlength="1"></select>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label">Sub Categoria</label>
                                    <input type="hidden" asp-for="scat_Id" id="subcategories" />
                                    <select asp-for="scat_Id" id="SelectSubcategories" class="form-control" maxlength="1"></select>
                                </div>
                            </div>
                            <div class="card-footer">
                                <button type="submit" class="btn btn-secondary" style="margin: 0px 30px 0px 0px;">Guardar</button>
                                <a class="btn btn-primary" asp-area="" asp-controller="Products" asp-action="Index">Cancelar</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/js/jquery.min.js"></script>
<script src="~/js/app/Productos/Products.js"></script>
<script src="~/js/app/Productos/ProductsEdit.js"></script>
<script>
    function docReady(fn) {
        if (document.readyState === "complete" || document.readyState === "interactive") {
            setTimeout(fn, 1);
        } else {
            document.addEventListener("DOMContentLoaded", fn);
        }
    }
    docReady(function () {
        Menu('products');

    });
</script>