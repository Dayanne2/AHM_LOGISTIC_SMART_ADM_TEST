@model AHM.Logistic.Smart.Common.Models.PersonsModel
@{
    ViewData["Title"] = "Crear Persons";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-content-wrapper">
    <div class="row">
        <div class="col-md-12">
            <div class="card m-b-30">
                <div class="card-body">
                    <h4 class="card-title font-16 mt-0">Registrar Persons</h4>
                    <h6 class="card-subtitle font-14 text-muted">Support card subtitle</h6>
                    <div class="card-body">
                        <form method="post" autocomplete="off" id="frmCreatePersons">
                            <div class="row">
                                <input type="hidden" asp-for="per_IdUserCreate" value="1" />
                                <div class="form-group col-md-6">
                                    <label class="form-label">Identidad</label>
                                    <input type="text" asp-for="per_Identidad" class="form-control" maxlength="14" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label">Primer Nombre</label>
                                    <input type="text" asp-for="per_Firstname" class="form-control" maxlength="30" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label">Segundo Nombre</label>
                                    <input type="text" asp-for="per_Secondname" class="form-control" maxlength="30" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label">Apellidos</label>
                                    <input type="text" asp-for="per_LastNames" class="form-control" maxlength="30" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label">Fecha de nacimiento</label>
                                    <input type="date" asp-for="per_BirthDate" class="form-control" value="dd-mm-yyyy"/>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label">Sexo</label>
                                    <select asp-for="per_Sex" class="form-control">
                                        <option value="0">Por favor seleccione una opción... </option>
                                        <option value="F">Femenino</option>
                                        <option value="M">Masculino</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label">Email</label>
                                    <input type="email" asp-for="per_Email" class="form-control" maxlength="50" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label">Teléfono</label>
                                    <input type="text" asp-for="per_Phone" class="form-control" maxlength="11" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label">Dirección</label>
                                    <input type="text" asp-for="per_Direccion" class="form-control" maxlength="70" />
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label">Departamento</label>
                                    <select name="dep_Id" id="SelectDepartments" class="form-control" maxlength="1"></select>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label">Municipio</label>
                                    <select name="mun_Id" id="SelectMunicipalities" class="form-control" maxlength="1" disabled>
                                        <option value="0"> Por favor seleccione una opción... </option>
                                    </select>
                                </div>
                                <div class="form-group col-md-6">
                                    <label class="form-label">Estado Civil</label>
                                    <select asp-for="per_Esciv" class="form-control">
                                        <option value="0">Por favor seleccione una opción... </option>
                                        <option value="default">Casado</option>
                                        <option value="S">Soltero</option>
                                        <option value="D">Divorciado</option>
                                        <option value="V">Viudo</option>
                                        <option value="U">Unión Libre</option>
                                    </select>
                                </div>
                            </div>
                                <button type="submit" class="btn btn-secondary" style="margin: 0px 30px 0px 0px;">Agregar</button>
                                <a class="btn btn-primary" asp-area="" asp-controller="Persons" asp-action="Index">Regresar</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/jquery.min.js"></script>
<script src="~/js/app/Persons/PersonsCreate.js"></script>
<script src="~/js/app/Persons/Persons.js"></script>
<script>
    function docReady(fn) {
        if (document.readyState === "complete" || document.readyState === "interactive") {
            setTimeout(fn, 1);
        } else {
            document.addEventListener("DOMContentLoaded", fn);
        }
    }
    docReady(function () {
        Menu('persons');

    });
</script>