@model AHM.Logistic.Smart.Common.Models.OccupationsModel
@{
    ViewData["Title"] = "Crear Ocupación";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="padding-top: 10%">
    <div class="container-fluid content-inner mt-n5 py-0">
        <div>
            <div class="row">
                <div class="col-xl-12 col-lg-12">
                    <div class="card" style="padding: 1%">
                        <div class="card-header d-flex justify-content-between">
                            <div class="header-title">
                                <h4 class="card-title">Ocupación</h4>
                            </div>
                            <hr />
                        </div>
                        <div class="card-body">
                            <div class="new-user-info">
                                <form method="post" autocomplete="off">
                                    <div class="row">
                                        <input type="hidden" asp-for="occ_IdUserCreate" value="1" />
                                        <div class="form-group col-md-6">
                                            <label class="form-label">Descripción</label>
                                            <div class="col-md-10">
                                                <input type="text" asp-for="occ_Description" class="form-control" />
                                            </div>
                                        </div>
                                    </div>
                                    <hr>
                                    <div style="margin: 4% 0% 0% 0%;">
                                        <button type="submit" class="btn btn-success" style="margin: 0px 30px 0px 0px;">Agregar</button>
                                        <a class="btn btn-outline-secondary" asp-area="" asp-controller="Occupation" asp-action="Index">Regresar</a>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


